@model IEnumerable<Proyecto_Final_Web.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<div class="hero-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-md-12">
                <div class="form-container p-4 p-md-5">
                    <div class="form-header">
                        <h1><i class="fas fa-users me-3"></i>Lista de Usuarios</h1>
                        <p>Administra los usuarios registrados en el sistema</p>
                    </div>

                    <div class="d-flex justify-content-end mb-4">
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-user-plus me-2"></i>
                            Crear Nuevo Usuario
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="th-icon-nombrecompleto">
                                        @Html.DisplayNameFor(model => model.NombreCompleto)
                                    </th>
                                    <th class="th-icon-correo">
                                        @Html.DisplayNameFor(model => model.Correo)
                                    </th>
                                    <th class="th-icon-contrasena">
                                        @Html.DisplayNameFor(model => model.Contrasena)
                                    </th>
                                    <th class="th-icon-telefono">
                                        @Html.DisplayNameFor(model => model.Telefono)
                                    </th>
                                    <th class="th-icon-fecharegistro">
                                        @Html.DisplayNameFor(model => model.FechaRegistro)
                                    </th>
                                    <th class="th-icon-idrol">
                                        @Html.DisplayNameFor(model => model.IdRolNavigation)
                                    </th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td data-label="@Html.DisplayNameFor(model => model.NombreCompleto)">
                                            @Html.DisplayFor(modelItem => item.NombreCompleto)
                                        </td>
                                        <td data-label="@Html.DisplayNameFor(model => model.Correo)">
                                            @Html.DisplayFor(modelItem => item.Correo)
                                        </td>
                                        <td data-label="@Html.DisplayNameFor(model => model.Contrasena)">
                                            @Html.DisplayFor(modelItem => item.Contrasena)
                                        </td>
                                        <td data-label="@Html.DisplayNameFor(model => model.Telefono)">
                                            @Html.DisplayFor(modelItem => item.Telefono)
                                        </td>
                                        <td data-label="@Html.DisplayNameFor(model => model.FechaRegistro)">
                                            @Html.DisplayFor(modelItem => item.FechaRegistro)
                                        </td>
                                        <td data-label="@Html.DisplayNameFor(model => model.IdRolNavigation)">
                                            @Html.DisplayFor(modelItem => item.IdRolNavigation.Nombre)
                                        </td>
                                        <td data-label="Acciones">
                                            <div class="d-flex justify-content-center justify-content-md-start">
                                                <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn-action-edit">
                                                    <i class="fas fa-edit"></i> Editar
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.IdUsuario" class="btn-action-details">
                                                    <i class="fas fa-info-circle"></i> Detalles
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn-action-delete">
                                                    <i class="fas fa-trash-alt"></i> Eliminar
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
